{
	"name": "dougw/framework",
	"description": "pvc - a php development framework",
	"type": "project",
	"authors": [
		{
			"name": "Doug Wilbourne",
			"email": "dougwilbourne@gmail.com"
		}
	],
	"license": "MIT",
	"config": {
		"php": "7.4.3"
	},
	"autoload": {
		"psr-4": {
			"pvc\\": "src/",
			"tests\\": "tests/"
		}
	},
	"require": {
		"ext-curl": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-iconv": "*",
		"ext-gettext": "*",
		"ext-dom": "*",
		"ext-fileinfo": "*",
		"ext-libxml": "*",
		"ext-simplexml": "*",
		"ext-tidy": "*",
		"nesbot/carbon": "^2.32",
		"moneyphp/money": "^3.3",
		"symfony/intl": "^5.0",
		"nikic/php-parser": "^4.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^8",
		"mockery/mockery": "dev-master",
		"phpspec/prophecy": "~1.0",
		"mikey179/vfsstream": "1.6.8",
		"squizlabs/php_codesniffer": "^3.5",
		"friendsofphp/php-cs-fixer": "3.0.x-dev",
		"guzzlehttp/guzzle": "^6.5",
		"pvc/testing-traits": "dev-master",
		"rexxars/html-validator": "^2.2.0",
		"phpstan/phpstan": "^0.12.25"
	}
}
